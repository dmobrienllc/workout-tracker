{{else}}
<div class="row mb-4">
  <div class="col-md-12">
    <h3>Welcome, {{user.user_name}}! Create a post and start the conversation!</h3>
  </div>
</div>
{{/if}}

<div class="row mb-4">
  <div class="col-md-12">
    <form class="form new-post-form">
      <div class="form-group">
        <label for="name-signup">Title:</label>
        <input class="form-input" type="text" id="post-title" />
      </div>
      <div class="form-group">
        <label for="email-signup">Body:</label>
        <input class="form-input" type="textarea" id="post-body" />
      </div>
      <div class="form-group">
        <button class="btn btn-primary" type="submit" data-post-user-id="{{user.id}}">Create</button>
      </div>
    </form>
  </div>
</div>

<script src="../js/dashboard.js"></script>