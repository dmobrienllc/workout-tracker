<!-- Loop over each object in the projects array -->
{{#each posts as |post| }}
<div class="row mb-4 post">
  <div class="card col-md-12">
    <div class="card-header">
      <i class='fas fa-glasses'></i> <a href="/posts/{{post.id}}">{{post.post_title}}</a> <span>Created by
        {{post.user.user_name}} on {{format_date post.created_at}}</span>
    </div>
    <div class="card-body">
      <p class="card-text">{{post.post_body}}</p>
    </div>
  </div>
</div>
{{/each}}